<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <View
          android:id="@+id/view"
          android:background="@color/colorTextOrange"
          android:layout_width="@dimen/dimen_2"
          android:layout_height="@dimen/dimen_20">
      </View>

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_toEndOf="@+id/view"
            android:fontFamily="@font/avenir_light"
            android:text="Fasion Accessiors"
            android:textColor="@color/splashColor"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextOrange"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/view"
            android:textSize="@dimen/font_12sp"
            android:textStyle="bold"
            android:fontFamily="@font/avenir_book"
            android:text="@string/view_all"/>



    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_height="@dimen/dimen_130"
        android:layout_marginTop="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_5"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/iv_category_image"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:src="@drawable/homepage_category"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>