<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                android:background="@drawable/kyc_rect_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenir_book"
                    android:padding="10dp"
                    android:text="@string/select_country"
                    android:textColor="@color/color_white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_close" />

            </RelativeLayout>

            <LinearLayout
                android:backgroundTint="#C5CFD1"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:background="@drawable/btn_select_gender"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="@dimen/font_14sp"
                    android:padding="@dimen/dimen_15"
                    android:textAlignment="textStart"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:layout_constraintTop_toBottomOf="@+id/rlt_date_select"
                    android:layout_marginBottom="@dimen/margin_4dp"
                    android:layout_marginStart="@dimen/font_16sp"
                    android:layout_marginEnd="@dimen/font_16sp"
                    android:fontFamily="@font/avenir_book"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"/>


              <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="@dimen/font_14sp"
                    android:padding="@dimen/dimen_15"
                    android:textAlignment="textStart"
                    android:layout_marginTop="@dimen/margin_4dp"
                    app:layout_constraintTop_toBottomOf="@+id/rlt_date_select"
                    android:layout_marginStart="@dimen/font_16sp"
                    android:layout_marginEnd="@dimen/font_16sp"
                    android:fontFamily="@font/avenir_book"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="@color/quantum_black_100"
                    android:textSize="@dimen/font_14sp"
                    android:padding="@dimen/dimen_15"
                    android:textAlignment="textStart"
                    app:layout_constraintTop_toBottomOf="@+id/rlt_date_select"
                    android:layout_marginBottom="@dimen/margin_4dp"
                    android:layout_marginStart="@dimen/font_16sp"
                    android:layout_marginEnd="@dimen/font_16sp"
                    android:fontFamily="@font/avenir_book"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
